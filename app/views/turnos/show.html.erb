<h1 class="title is-2 has-text-primary">Turno</h1>

<p>
    <strong>ID Usuario: </strong>
    <%= @turno.user_id %>
</p>
<p>
    <strong>Cantidad Asientos: </strong>
    <%= @turno.cantidad_asientos %>
</p>
<p>
    <strong>Hora Salida: </strong>
    <%= @turno.hora_salida %>
</p>
<p>
    <strong>Dirección Salida: </strong>
    <%= @turno.direccion_salida %>
</p>
<p>
    <strong>Dirección Llegada: </strong>
    <%= @turno.direccion_llegada %>
</p>
<p>
    <strong>Día Semana: </strong>
    <%= @turno.dia_semana %>
</p>
<p>
    <strong>Tipo: </strong>
    <%= @turno.tipo %>
</p>
<p>
    <strong>Estado: </strong>
    <%= @turno.estado %>
</p>

<%= button_to "Volver", turnos_index_path,:id => "boton_volver", :class => "button is-primary is-inverted is-rounded is-outlined", method: :get%>
<% if @turno.user_id == current_user.id %>
    <%= link_to 'Editar', turnos_edit_path(:id => @turno.id), class: "button is-primary is-inverted is-rounded is-outlined"%>
    <%= button_to "Eliminar", turnos_delete_path(:id => @turno.id),:id => "boton_volver", :class => "button is-primary is-inverted is-rounded is-outlined", method: :delete%>
<% else %>
    <%= link_to 'Solicitar', requests_new_path(:id => @turno.id),id: "boton_volver", class: "button is-primary is-inverted is-rounded is-outlined"%>
    <% if @turno.estado == 'COMPLETADO' %>
    
    <% end %>
<% end %>
