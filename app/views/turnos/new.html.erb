<h1 align='center' class = "title is-2 has-text-primary" >Crear Turno</h1>

<div class="column is-4 is-offset-4">
<div  align='center'>
<%= form_for @turno, as: :turno do |form| %>

    <div>
        <%= form.text_field :cantidad_asientos, class: "input is-primary is-rounded is-outlined", placeholder:"Cantidad asientos"%>
    </div>
    <br/>
    <div class="field-group">
        <h1 align='center' class = "title is-4 has-text-black" >Hora de salida</h1>
        <div class="field is-inline-block-desktop">
            <div class="select">
                <%= form.time_select :hora_salida, time_separator: '</div><div class="select">' %>
            </div>
        </div>
    </div>
    <br/>
    <% def options_for_status
      [
      ['Lunes','Lunes'],
      ['Martes','Martes'],
      ['Miércoles','Miércoles'],
      ['Jueves','Jueves'],
      ['Viernes','Viernes'],
      ['Sábado','Sábado'],
      ['Domingo','Domingo']
      ]
    end %>
    <div>
      <label class="label">Día de la semana</label>
      <%= form.select :dia_semana, options_for_status, {}, prompt: 'Select One' %>
    </div>
    <br/>
    <% def options_for_status
      [
      ['Ida','Ida'],
      ['Vuelta','Vuelta']
      ]
    end %>
    <div>
      <label class="label">Tipo</label>
      <%= form.select :tipo, options_for_status, {}, prompt: 'Select One' %>
    </div>
    <br/>
    <div>
        <%= form.text_field :direccion_salida, class: "input is-primary is-rounded is-outlined", placeholder:"Dirección de salida"%>
    </div>
    <br/>
    <div>
        <%= form.text_field :direccion_llegada, class: "input is-primary is-rounded is-outlined", placeholder:"Dirección de llegada"%>
    </div>
    <br/>
    <div>
        <%= form.submit 'Crear turno', class: "button is-primary is-inverted is-rounded is-outlined" %>
    </div>
    <br/>

<% end %>
</div>

<a align='center'>
<%= button_to "Volver", turnos_index_path,:id => "boton_volver", :class => "button is-primary is-inverted is-rounded is-outlined", method: :get%>
</a>
</div>

