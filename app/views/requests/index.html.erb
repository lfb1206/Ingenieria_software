<h1 align='center' class = "title is-2 has-text-primary" >Resumen Solicitudes</h1>
<h1 align='center' class = "title is-4 has-text-black" >Aquí se encuentra toda la información de las solicitudes</h1>

<div class="row">
    <div class="column">
        <div align='left' style="display: flex; flex-flow: wrap; ">
            <h3 class = "title is-4 has-text-dark" >Solicitudes Recibidas Pendientes</h3>
        </div>
        <br/>
        <div class="row">
            <div class="row_inner_request">
                <div class="tile">
                    <% @requests.each do |request|%>
                        <%if request.turno.user_id == current_user.id and request.estado == "PENDIENTE"%>
                            <div align='center' style="display: flex; flex-flow: wrap; ">
                                <div class="column-request">
                                    <p>Turno: <%= request.turno.id%></p>
                                    <p>Conductor: <%=  User.find(request.turno.user_id).name %></p>
                                    <p>Solicitante: <%=  User.find(request.user_id).name%></p>
                                    <%= link_to 'Ver detalles', requests_show_path(:id => request.id)%>
                                    <br/>
                                    <%= link_to 'Responder', requests_edit_path(:id => request.id)%>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="column">
        <div align='left' style="display: flex; flex-flow: wrap; ">
            <h3 class = "title is-4 has-text-dark" >Solicitudes Recibidas Procesadas</h3>
        </div>
        <br/>
        <div class="row">
            <div class="row_inner_request">
                <div class="tile">
                    <% @requests.each do |request|%>
                        <%if request.turno.user_id == current_user.id and request.estado != "PENDIENTE"%>
                            <div align='center' style="display: flex; flex-flow: wrap; ">
                                <div class="column-request">
                                    <p>Turno: <%= request.turno.id%></p>
                                    <p>Conductor: <%=  User.find(request.turno.user_id).name %></p>
                                    <p>Solicitante: <%=  User.find(request.user_id).name%></p>
                                    <%= link_to 'Ver detalles', requests_show_path(:id => request.id)%>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="column">
        <div align='left' style="display: flex; flex-flow: wrap; ">
            <h3 class = "title is-4 has-text-dark" >Solicitudes Enviadas Pendientes</h3>
        </div>
        <br/>
        <div class="row">
            <div class="row_inner_request">
                <div class="tile">
                    <% @requests.each do |request|%>
                        <%if request.user_id == current_user.id and request.estado == "PENDIENTE"%>
                            <div align='center' style="display: flex; flex-flow: wrap; ">
                                <div class="column-request">
                                    <p>Turno: <%= request.turno.id%></p>
                                    <p>Conductor: <%=  User.find(request.turno.user_id).name %></p>
                                    <p>Solicitante: <%=  User.find(request.user_id).name%></p>
                                    <%= link_to 'Ver detalles', requests_show_path(:id => request.id)%>
                                    <br/>
                                    <%= link_to 'Editar', requests_edit_path(:id => request.id)%>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="column">
        <div align='left' style="display: flex; flex-flow: wrap; ">
            <h3 class = "title is-4 has-text-dark" >Solicitudes Enviadas Procesadas</h3>
        </div>
        <br/>
        <div class="row">
            <div class="row_inner_request">
                <div class="tile">
                    <% @requests.each do |request|%>
                        <%if request.user_id == current_user.id and request.estado != "PENDIENTE"%>
                            <div align='center' style="display: flex; flex-flow: wrap; ">
                                <div class="column-request">
                                    <% @no_vacio = true %>
                                    <p>Turno: <%= request.turno.id%></p>
                                    <p>Conductor: <%=  User.find(request.turno.user_id).name %></p>
                                    <p>Solicitante: <%=  User.find(request.user_id).name%></p>
                                    <%= link_to 'Ver detalles', requests_show_path(:id => request.id)%>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

