<h1 align='center' class = "title is-2 has-text-primary" >Resumen Solicitudes</h1>

<br/><h3>Solicitudes Recibidas Pendientes</h3><br/>
<div align='center'style="display: flex; flex-flow: wrap;">
    <% @requests.each do |request|%>
        <%if request.turno.user_id == current_user.id and request.estado == "PENDIENTE"%>
            <div style="border: solid 1px; width: 200px; padding: 10px; align-text: center; margin: 5px; background-color: lightblue;">
            <b>Id Solicitud: </b><p><%= request.id%></p>
            <b>Id Usuario Turno: </b><p><%= request.turno.user_id%></p>
            <b>Id Usuario Solicitud: </b><p><%= request.user_id%></p>
            <b>Id Publicación: </b><p><%= request.turno.id%></p>
            <b>Estado: </b><p><%= request.estado%></p>
            <b>Descripción: </b><p><%= request.descripcion%></p>
            <%= link_to 'Responder', requests_edit_path(:id => request.id)%>
        <% end %>
</div>
<% end %>
<br/>

<br/><h3>Solicitudes Recibidas Procesadas</h3><br/>
