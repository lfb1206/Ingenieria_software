<h1>Reseña</h1>

<p>
    <strong>ID Viaje: </strong>
    <%= @resena.turno.id %>
</p>
<p>
    <strong>Nombre Pasajero: </strong>
    <%= @resena.user.name %>
</p>
<p>
    <strong>Nombre Conductor: </strong>
    <%= @user_conductor.name %>
</p>
<p>
    <strong>Contenido: </strong>
    <%= @resena.contenido %>
</p>
<p>
    <strong>Calificación: </strong>
    <%= @resena.calificacion %>
</p>


<%= link_to 'Volver', turnos_show_path(:id => @resena.turno.id)%>
<% if @resena.user.id == current_user.id%>
    <%= link_to 'Editar', resenas_edit_path(:id => @resena.id)%>
    <%= link_to 'Eliminar', resenas_delete_path(:id => @resena.id), method: :delete%>
<% end %>