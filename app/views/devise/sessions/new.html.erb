<h1 align='center' class = "title is-2 has-text-primary" >Ingresar</h1>
  <div class="column is-4 is-offset-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div align='center'>
    <div class="field">
      <%= f.email_field :email, class: "input is-primary is-rounded is-outlined", placeholder:"Email", autofocus: true, autocomplete: "email" %>
    </div>
    </div>
    <br/>

    <div align='center'>
    <div class="field">
      <%= f.password_field :password, class: "input is-primary is-rounded is-outlined", placeholder:"ContraseÃ±a", autocomplete: "current-password" %>
    </div>
    </div>
    <br/>

    <div align='center'>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "title is-6 has-text-white" %>
      </div>
    <% end %>
    </div>
    <br/>

    <div align='center'>
    <div class="actions">
      <%= f.submit "Ingresar", {class: "button is-primary is-inverted is-rounded is-outlined"} %>
    </div>
    </div>
  <% end %>
    <div align='center'>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
