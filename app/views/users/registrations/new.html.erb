<h1 align='center' class = "title is-2 has-text-primary" >Registrarse</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="column is-4 is-offset-4">
    <div align='center'>
    <div class="field">
      <%= f.email_field :email, class: "input is-primary is-rounded is-outlined", placeholder:"Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %><br/>
      <%= f.password_field :password, class: "input is-primary is-rounded is-outlined", placeholder:"Contrase침a", autocomplete: "new-password" %>
    </div>

    <br/>
    <div class="field">
      <%= f.password_field :password_confirmation, class: "input is-primary is-rounded is-outlined", placeholder:"Repita su contrase침a", autocomplete: "new-password" %>
    </div>

    <br/>
    <div class="field">
      <%= f.text_field :name, class: "input is-primary is-rounded is-outlined", placeholder:"Nombre" %>
    </div>

    <br/>
    <div class="field">
      <%= f.text_field :address, class: "input is-primary is-rounded is-outlined", placeholder:"Direcci칩n" %>
    </div>

    <br/>
    <div class="field">
      <%= f.text_field :description, class: "input is-primary is-rounded is-outlined", placeholder:"Descripci칩n" %>
    </div>

    <br/>
    <div class="field">
      <%= f.text_field :gender, class: "input is-primary is-rounded is-outlined", placeholder:"Genero" %>
    </div>

    <br/>
    <div class="field">
      <%= f.text_field :phone, class: "input is-primary is-rounded is-outlined", placeholder:"Telefono" %>
    </div>
    
    <br/>
    <div class="actions">
      <%= f.submit "Registrarse", class: "button is-primary is-inverted is-rounded is-outlined" %>
    </div>
    <% end %>
    <div align='center'>
    <%= render "users/shared/links" %>
    </div>
  </div>
</div>